link rel="stylesheet" href="\css\socials.css"/
link rel="stylesheet" href="\css\profile.css"/

main 
    aside 
        .maininfo 
            <img src="#{the_user['img']}"/>
            p #{the_user['username']}!
            a href="/media/new" +

    section  
        .information 
            <img src="#{user['img']}"/>
            .stats
                h2 #{user['username']}
                h3 Followers <br> 0
                h3 Follow <br> 0
            p #{user['bio']}
        form action="/user/#{user['id']}/friendship" method="post" 
            input type="submit" id="followUser" onclick="followUser()" Follow
        button id="profileButton" onclick="seeposts()" Written posts

        .profileContainer
            .imgposts
                - photos.each do |photo|
                    - if photo['post'] != ''
                        img.profileImg src="#{photo['post']}"
            .textposts    
                - photos.each do |photo|
                    - if photo['post'] == ''
                        p = "#{photo['text']}"

        



